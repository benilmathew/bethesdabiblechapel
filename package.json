{
  "name": "bethesda-church-website",
  "version": "1.0.0",
  "description": "Bethesda Church Website - A modern church website with Node.js backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "wrangler pages dev . --compatibility-date=2024-01-01 --d1=DB",
    "dev:legacy": "nodemon server.js",
    "serve": "node dev-server.js",
    "deploy": "wrangler pages deploy .",
    "db:init": "wrangler d1 execute DB --file=./schema.sql",
    "db:migrate": "wrangler d1 execute DB --file=./schema.sql --remote",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "church",
    "website",
    "nodejs",
    "express"
  ],
  "author": "Bethesda Church",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "googleapis": "^118.0.0",
    "helmet": "^7.1.0",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "sharp": "^0.34.5",
    "wrangler": "^4.60.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
